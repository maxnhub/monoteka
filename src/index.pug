    .wrapper
      .maincontent
        header.header
          .container
            a.button.header__button(href="#") Каталог
              .arrow.arrow-down
            a.logo(href="#")
              +image('content/logo.png', 'logo-pic', 'Логотип')
            nav.menu
              a.menu__item.menu__item--company(href="#") Компания
              a.menu__item.menu__item--news(href="#") Новости
              a.menu__item.menu__item--logistics(href="#") Поставщикам
              a.menu__item.menu__item--contacts(href="#") Контакты
              a.menu__item.menu__item--cabinet(href="#") Кабинет
            a.header__search
              +icon('search', 'header__search_icon')
            a.header__basket
              +icon('basket', 'header__basket_icon')
        section.catalog
          .container
            .swiper-container.catalog__slider
              ul.catalog__list.swiper-wrapper
                li.catalog__item.swiper-slide
                  h1.catalog__item_title Monoteka-group - лучшие моменты жизни вместе с нашими платьями
                  a.button.button--catalog(href="#") Купить
                li.catalog__item.catalog__item--safety.swiper-slide
                  h2.catalog__item_title Monoteka-group - за безопасность
                  a.button.button--catalog(href="#") Купить
                li.catalog__item.catalog__item--fashion.swiper-slide
                  h2.catalog__item_title Monoteka-group - за самовыражение
                  a.button.button--catalog(href="#") Купить
              .catalog__arrow.catalog__arrow--left
                .arrow.arrow-left
              .catalog__arrow.catalog__arrow--right
                .arrow.arrow-right
            .catalog__sidebar
              .catalog__preview.catalog__preview--jackets
                span.catalog__preview_title Пиджаки
                a.page-link(href="#") В наших магазинах
              .catalog__preview.catalog__preview--buisness
                span.catalog__preview_title Деловой стиль
                a.page-link(href="#") Узнать больше
          .container
            ul.catalog__goods
              li.catalog__goods_block
                a.catalog__goods_item(href="#")
                  +icon('cat1', 'catalog__goods_icon')
                  span.catalog__goods_text Платья
              li.catalog__goods_block
                a.catalog__goods_item(href="#")
                  +icon('cat2', 'catalog__goods_icon')
                  span.catalog__goods_text Шубы
              li.catalog__goods_block
