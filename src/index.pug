                  +icon('cat3', 'catalog__goods_icon')
                  span.catalog__goods_text Пиджаки
              li.catalog__goods_block
                a.catalog__goods_item(href="#")
                  +icon('cat4', 'catalog__goods_icon')
                  span.catalog__goods_text Блузки
              li.catalog__goods_block
                a.catalog__goods_item(href="#")
                  +icon('cat5', 'catalog__goods_icon')
                  span.catalog__goods_text Джинсы
              li.catalog__goods_block
                a.catalog__goods_item(href="#")
                  +icon('cat6', 'catalog__goods_icon')
                  span.catalog__goods_text Рубашки
